<div class="row">
  {{#each articles}}
<div class="col-md-6">
    <div class="card">
<img src="{{this.image}}" alt="{{this.title}}">
<div class="card-body">
    <h4 class="card-title d-flex justify-content-between align-items-center">{{this.title}}    <a href="/edit/{{id}}"><i class="fas fa-pencil-alt"></i></a></h4>
<p>{{this.description}}</p>
 <form action="/delete/{{id}}?_method=DELETE" method="post">
 <input type="hidden" name="_method" value="DELETE">
     <button type="submit" class="btn btn-danger btn-block btn-sm"><i class="fas fa-trash-alt"></i> Eliminar</button>
 </form>
</div>
    </div>
</div>
 {{/each}}    

</div>